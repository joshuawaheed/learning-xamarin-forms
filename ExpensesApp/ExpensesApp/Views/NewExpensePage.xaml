<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:vm="clr-namespace:ExpensesApp.ViewModels"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="ExpensesApp.Views.NewExpensePage">
    <ContentPage.Resources>
        <ResourceDictionary>
            <vm:NewExpenseViewModel x:Key="vm" />
        </ResourceDictionary>
    </ContentPage.Resources>
    <ContentPage.ToolbarItems>
        <ToolbarItem
            Text="Save"
            Command="{Binding Source={StaticResource vm}, Path=SaveExpenseCommand}" />
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout Margin="16">
            <Entry Placeholder="Expense name" />
            <Entry Placeholder="Amount" Keyboard="Numeric" />
            <Entry Placeholder="Short description" />
            <DatePicker />
            <Picker />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>


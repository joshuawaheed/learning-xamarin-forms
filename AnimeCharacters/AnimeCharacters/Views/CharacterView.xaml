<?xml version="1.0" encoding="UTF-8"?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="AnimeCharacters.Views.CharacterView">
    <ScrollView
        BackgroundColor="White"
        x:Name="characterDetail">
        <StackLayout>
            <Image
                HorizontalOptions="CenterAndExpand"
                Source="{Binding ImageUrl}"
                WidthRequest="500" />
            <Label
                FontAttributes="Bold"
                FontSize="24"
                Text="{Binding Name}"
                TextColor="#333333"
                WidthRequest="500"
                Padding="30,15,30,0"/>
            <Label
                FontAttributes="None"
                FontSize="18"
                Text="{Binding Description}"
                WidthRequest="500"
                Padding="30,0,30,30"/>
        </StackLayout>
    </ScrollView>
</ContentPage>
